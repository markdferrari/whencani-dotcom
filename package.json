{
  "name": "whencani-dotcom",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -pA run dev",
    "dev:watch": "yarn workspace whencaniwatchit dev",
    "dev:play": "yarn workspace whencaniplayit dev",
    "dev:read": "yarn workspace whencanireadit dev",
    "build": "yarn workspaces foreach -A run build",
    "build:watch": "yarn workspace whencaniwatchit build",
    "build:play": "yarn workspace whencaniplayit build",
    "build:read": "yarn workspace whencanireadit build",
    "lint": "yarn workspaces foreach -A run lint",
    "test": "yarn workspaces foreach -A run test",
    "clean": "rm -rf apps/*/node_modules apps/*/.next packages/*/node_modules node_modules .yarn/cache",
    "deploy:watch": "yarn workspace whencaniwatchit sst:deploy",
    "deploy:play": "yarn workspace whencaniplayit sst:deploy",
    "deploy:read": "yarn workspace whencanireadit sst:deploy",
    "deploy:all": "yarn deploy:watch && yarn deploy:play && yarn deploy:read",
    "sst:dev:watch": "yarn workspace whencaniwatchit sst:dev",
    "sst:dev:play": "yarn workspace whencaniplayit sst:dev",
    "sst:dev:read": "yarn workspace whencanireadit sst:dev"
  },
  "dependencies": {
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "aws-cdk-lib": "^2.237.1",
    "constructs": "^10.4.5",
    "eslint": "^10",
    "eslint-config-next": "16.1.6",
    "sst": "^3.17.38",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.12.0"
}
